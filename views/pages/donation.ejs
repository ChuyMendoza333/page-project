<!doctype html>
<html lang="en">

<head>
  <%- include('../partials/head') %>
  <link rel="stylesheet" href="../css/donation.css">
</head>

<body>
  <!-- Main content with navigation bar -->
  <main class="color-head">
    <div class="container">
      <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
        <%- include('../partials/header') %>
      </header>
    </div>
  </main>

  <!-- Divider -->
  <div class="b-example-divider">

    <!-- Donation section -->
    <section class="donation">
      <div class="container">
        <div class="row">
          <div class="col-4">
            <h3>Donate</h3>
            <br>
          </div>
        </div>
        <!-- Donation form -->
        <form class="row g-3 border border-black">
          <!-- Name input -->
          <div class="col-md-5">
            <label for="validationDefault01" class="form-label">Name</label>
            <input type="text" class="form-control" id="validationDefault01" required>
          </div>

          <!-- Cellphone input -->
          <div class="col-md-3">
            <label for="validationDefaultUsername" class="form-label">Cellphone</label>
            <div class="input-group">
              <input type="text" class="form-control" id="validationDefaultUsername"
                aria-describedby="inputGroupPrepend2" required>
            </div>
          </div>

          <!-- Email input -->
          <div class="col-md-3">
            <label for="validationDefaultUsername" class="form-label">Email</label>
            <div class="input-group">
              <input type="text" class="form-control" id="validationDefaultUsername"
                aria-describedby="inputGroupPrepend2" required>
            </div>
          </div>

          <!-- Select donation type -->
          <div class="col-md-3">
            <label for="validationDefault05" class="form-label">Select Donation</label>
            <select class="form-select" id="validationDefault04" required>
              <option selected disabled value="">Choose...</option>
              <option>$250</option>
              <option>$350</option>
              <option>$500</option>
            </select>
          </div>

          <!-- Other amount input -->
          <div class="col-md-3">
            <label for="validationDefaultUsername" class="form-label">Other</label>
            <div class="input-group">
              <input type="number" class="form-control" id="validationDefaultUsername"
                aria-describedby="inputGroupPrepend2" required>
            </div>
          </div>

          <!-- Credit card input -->
          <div class="col-md-3">
            <label for="validationDefaultUsername" class="form-label">Credit card</label>
            <div class="input-group">
              <input type="text" class="form-control" id="validationDefaultUsername"
                aria-describedby="inputGroupPrepend2" required>
            </div>
          </div>

          <!-- CVV input -->
          <div class="col-md-3">
            <label for="validationDefaultUsername" class="form-label">CVV</label>
            <div class="input-group">
              <input type="text" class="form-control" id="validationDefaultUsername"
                aria-describedby="inputGroupPrepend2" required>
            </div>
          </div>

          <!-- Expiration date input -->
          <div class="col-md-3">
            <label for="validationDefaultUsername" class="form-label">Expiration date</label>
            <div class="input-group">
              <input type="date" class="form-control" id="validationDefaultUsername"
                aria-describedby="inputGroupPrepend2" required>
            </div>
          </div>

          <!-- Terms and conditions checkbox -->
          <div class="col-12">
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="" id="invalidCheck2" required>
              <label class="form-check-label" for="invalidCheck2">Agree to terms and conditions</label>
            </div>
          </div>

          <!-- Submit button -->
          <div class="col-12">
            <button class="btn btn-primary" type="submit">Submit information</button>
          </div>
        </form>
      </div>
    </section>
    <br><br>

    <!-- Footer section -->
    <footer>
      <%- include('../partials/footer') %>
    </footer>
  </div>
</body>

</html>